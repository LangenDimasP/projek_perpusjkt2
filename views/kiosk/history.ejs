<%- include('../partials/header') %>

<h1 class="text-3xl font-bold text-gray-800 mb-6">Riwayat Check-in Anda</h1>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nama Pengunjung</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Event</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Waktu Check-in</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Kode Reservasi</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (checkins.length > 0) { %>
                    <% checkins.forEach(item => { %>
                        <tr>
                            <td class="px-6 py-4"><%= item.user_name %></td>
                            <td class="px-6 py-4"><%= item.event_name %></td>
                            <td class="px-6 py-4"><%= new Date(item.checkin_time).toLocaleString('id-ID') %></td>
                            <td class="px-6 py-4 font-mono"><%= item.reservation_code %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">Anda belum melakukan check-in.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>