<%- include('../partials/header') %>

<div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-800">Riwayat Alokasi Anda</h1>
</div>

<div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nama Pengguna</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Event</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Jadwal Sesi</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Kode Reservasi</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                <% if (allocations.length > 0) { %>
                    <% allocations.forEach(alloc => { %>
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900"><%= alloc.user_name %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= alloc.event_name %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-gray-500"><%= new Date(alloc.start_time).toLocaleString('id-ID') %></td>
                            <td class="px-6 py-4 whitespace-nowrap text-gray-500 font-mono"><%= alloc.reservation_code %></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">Anda belum pernah mengalokasikan kuota.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>

<%- include('../partials/footer') %>